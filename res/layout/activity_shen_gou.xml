<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout  
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    
             
             <EditText
                 android:id="@+id/shen_gou_search_begin_date" 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" 
                 android:hint="@+string/search_date_start_text"
                 android:inputType="date"
                 android:focusableInTouchMode="false"/>
             
             
                  
             <EditText
                 android:id="@+id/shen_gou_search_end_date" 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" 
                 android:hint="@+string/search_date_end_text"
                 android:inputType="date"
                 android:focusableInTouchMode="false"/>
        
        
           <Button
                   android:layout_marginTop="5dp"
       			 android:layout_marginLeft="5dp"
             android:id="@+id/shen_gou_search_button"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@+string/search_button"  />
           
              <Button
                   android:layout_marginTop="5dp"
       			 android:layout_marginLeft="5dp"
             android:id="@+id/shen_gou_add_button"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@+string/shen_gou_edit_add_button_label"  />
        
    </LinearLayout>
    
    <TextView android:id="@+id/shen_gou_summary_text"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
       	 android:layout_marginLeft="5dp"/>
       <ListView
         android:id="@+id/shen_gou_listview"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" >
     </ListView>
     <ViewStub  android:id="@+id/shen_gou_listview_empty"
      android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:layout_gravity="center" android:layout="@layout/empty_list_view"
         />

</LinearLayout>
