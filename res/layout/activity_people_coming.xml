<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/ScrollView01"
    >
<LinearLayout
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<EditText
		android:id="@+id/people_coming_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:inputType="text"
		android:hint="@+string/people_coming_name_label"/>

	<EditText
		android:id="@+id/people_coming_relation"
		android:layout_width="match_parent"
		android:hint="@+string/people_coming_relation_label"
		android:layout_height="wrap_content"
		android:inputType="text"/>

	<EditText
		android:id="@+id/people_coming_comefrom"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="@+string/people_coming_comefrom_label"
		android:inputType="text"/>

	<EditText
		android:id="@+id/people_coming_job"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="@+string/people_coming_job_label"
		android:inputType="text"/>

	<EditText
		android:id="@+id/people_coming_remark"
		android:layout_width="match_parent"
		android:hint="@+string/people_coming_remark_label"
		android:layout_height="wrap_content"
		android:inputType="text"/>

	<EditText
		android:id="@+id/people_coming_arrive_date"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="@+string/people_coming_arrive_date_label"
		android:inputType="date"
		android:focusableInTouchMode="false"/>

	<CheckBox
		android:id="@+id/people_coming_daywork_is_return"
		android:text="@+string/people_coming_daywork_is_return"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"/>

	<Button
		android:layout_marginTop="5dp"
		android:layout_marginLeft="5dp"
		android:id="@+id/people_coming_daywork_willcoming_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@+string/people_coming_daywork_willcoming_button_label"/>

	<Spinner
		android:id="@+id/people_coming_daywork_house"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

	<EditText
		android:id="@+id/people_coming_work_date"
		android:layout_width="match_parent"
		android:hint="@+string/people_coming_work_date_label"
		android:layout_height="wrap_content"
		android:inputType="date"
		android:focusableInTouchMode="false"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Button
			android:layout_marginTop="5dp"
			android:layout_marginLeft="5dp"
			android:id="@+id/people_coming_daywork_iscoming_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@+string/people_coming_daywork_iscoming_button_label"/>

		<Button
			android:layout_marginTop="5dp"
			android:layout_marginLeft="5dp"
			android:id="@+id/people_coming_daywork_uncoming_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@+string/people_coming_daywork_uncoming_button_label"/>

	</LinearLayout>

	<EditText
		android:id="@+id/people_coming_leave_date"
		android:layout_width="match_parent"
		android:hint="@+string/people_coming_leave_date_label"
		android:layout_height="wrap_content"
		android:inputType="date"
		android:focusableInTouchMode="false"/>

	<Button
		android:layout_marginTop="5dp"
		android:layout_marginLeft="5dp"
		android:id="@+id/people_coming_info_modify_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@+string/save_button_text"/>

	
</LinearLayout>
</ScrollView>
