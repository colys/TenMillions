<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
   
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/day_work_query_date"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="5dp"
       	android:layout_marginLeft="5dp"
        android:id="@+id/day_work_prev_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+string/prev_day_text" />

    <Button
        android:layout_marginTop="5dp"
       	android:layout_marginLeft="5dp"
       	
        android:id="@+id/day_work_next_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+string/next_day_text" />

    <Button
        android:layout_marginTop="5dp"
       	android:layout_marginLeft="5dp"
       	
        android:id="@+id/day_work_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+string/recalc_button" />
</LinearLayout>

<ListView
    android:id="@+id/house_day_works_listview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
</ListView>
	
	</LinearLayout>
